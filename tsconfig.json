{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES6",
        "jsx": "react",
        "noImplicitOverride": true,
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"]
    },
    "include": ["./src/**/*", "declaration.d.ts"],
    "exclude": ["node_modules"]
}
